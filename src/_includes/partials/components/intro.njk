<header class="[ intro ] [ {{ 'pad-top-900 pad-bottom-max' if page.url === '/' else 'pad-top-800 pad-bottom-900' }}  ]">
  <div class="[ inner-wrapper ] [ sf-flow ]">
    <h1 class="[ intro__heading ] [ text-800 md:text-900 leading-tight ]">{{ introHeading }}</h1>
    {% if introSummary %}
      <div class="[ intro__summary ] [ sf-flow ] [ leading-mid ]">{{ introSummary | safe }}</div>
    {% endif %}
  </div>
</header>
